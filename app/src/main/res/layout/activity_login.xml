<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/login"
    >

    <EditText
        android:id="@+id/editTextLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ashrectangle"
        android:backgroundTint="#519A8E8E"
        android:drawableStart="@drawable/pwd"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:password="true"
        android:textAlignment="viewStart"
        android:textColor="#96000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573"
        tools:ignore="Deprecated,DuplicateIds,HardcodedText,NotSibling,TextFields,VisualLintOverlap" />

    <EditText
        android:id="@+id/editTextLoginUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@drawable/ashrectangle"
        android:backgroundTint="#519A8E8E"
        android:drawableStart="@drawable/username"
        android:drawablePadding="20dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Username"
        android:inputType="text"
        android:paddingStart="20dp"
        android:textAlignment="viewStart"
        android:textColor="#96000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.332"
        tools:ignore="DuplicateIds,HardcodedText,RtlSymmetry" />

    <TextView
        android:id="@+id/textViewForgetPwd"
        android:layout_width="243dp"
        android:layout_height="28dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="  Forget your password ?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
        app:layout_constraintVertical_bias="0.106"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/textViewNewUser"
        android:layout_width="150dp"
        android:layout_height="27dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="  New User ? "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForgetPwd"
        app:layout_constraintVertical_bias="0.109"
        tools:ignore="HardcodedText,MissingConstraints,NotSibling,TextSizeCheck" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="287dp"
        android:layout_height="59dp"
        android:layout_marginBottom="220dp"
        android:backgroundTint="#FAC406"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#18461B"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginPassword"
        app:layout_constraintVertical_bias="0.805"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="90dp"
        android:layout_height="27dp"
        android:fontFamily="@font/alike"
        android:text="Sign up"
        android:textColorHighlight="#0E2610"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForgetPwd"
        app:layout_constraintVertical_bias="0.109"
        tools:ignore="HardcodedText,MissingConstraints,NotSibling,TextSizeCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072"
        app:srcCompat="@drawable/logo2"
        tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/do_it"
        tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>